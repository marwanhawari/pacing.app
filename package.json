{
    "name": "pacing.app",
    "version": "0.0.1",
    "description": "A website to calculate your running pace.",
    "main": "src/index.js",
    "scripts": {
        "format": "prettier --write --ignore-unknown '{tests,src}/**/*{.js,.ts,.html,.css,.json}'",
        "lint": "eslint src",
        "pre-commit": "husky install && husky add .husky/pre-commit 'npm run format' && husky add .husky/pre-commit 'npm run lint'",
        "dev": "nodemon server/server.js",
        "start": "nohup node server/server.js > /dev/null 2>&1 &",
        "test": "npm run start && cypress run && curl http://localhost:8080/close",
        "release": "gh-pages -d src"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/marwanhawari/pacing.app.git"
    },
    "keywords": [
        "website",
        "webapp",
        "running",
        "pace"
    ],
    "author": "Marwan Hawari",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/marwanhawari/pacing.app/issues"
    },
    "homepage": "https://github.com/marwanhawari/pacing.app#readme",
    "devDependencies": {
        "cypress": "^9.1.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "express": "^4.17.1",
        "gh-pages": "^3.2.3",
        "husky": "^7.0.2",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1"
    }
}
